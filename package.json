{
    "name": "fraktal-lib",
    "version": "1.0.0",
    "description": "A library connecting the PM3 firefly node API interface for managing contracts, and other blockchain operations.",
    "homepage": "https://github.com/Fraktal-PM3/fraktal-lib#readme",
    "bugs": {
        "url": "https://github.com/Fraktal-PM3/fraktal-lib/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Fraktal-PM3/fraktal-lib.git"
    },
    "license": "ISC",
    "author": "fraktal",
    "type": "commonjs",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "vitest run",
        "test:watch": "vitest",
