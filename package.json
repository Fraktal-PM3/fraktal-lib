    "devDependencies": {
        "@types/node": "^24.7.1",
        "nodemon": "^3.1.10",
        "prettier": "^3.6.2",
        "rimraf": "^6.1.0",
        "ts-node": "^10.9.2",
        "typedoc": "^0.28.14",
        "typedoc-plugin-markdown": "^4.9.0",
        "typescript": "^5.9.3",
        "vitest": "^3.2.4"
    },
    "dependencies": {
        "@hyperledger/firefly-sdk": "^1.3.3",
        "json-stringify-deterministic": "^1.0.12",
        "sort-keys-recursive": "^2.1.10"
